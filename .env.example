# Copy this file to .env and fill in your values

# MongoDB Connection String (get from MongoDB Atlas or your MongoDB provider)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/exam_portal?retryWrites=true&w=majority

# Secret key for session management (generate a random string)
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Port (optional, defaults to 5001 locally, uses PORT env var in production)
PORT=5001

# Environment
FLASK_ENV=production